<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sofoste.sofostemfcalc.controller.MainMenuController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10">
        <Label text="Hello! What would you like to do?" />
        <Button text="Basic Calculator" onAction="#loadBasicCalculator" />
        <Button text="Advanced Calculator" onAction="#loadAdvancedCalculator" />
        <Button text="Number System Converter" onAction="#loadNumberSystemConverter" />
        <Button text="Text to Binary / Binary to Text" onAction="#loadTextBinaryConversion" />
        <Button text="Units Converter" onAction="#loadUnitConversion" />
        <Button text="Learn More..." onAction="#loadLearnMore" />
    </VBox>

</AnchorPane>
