<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="433.0" prefWidth="695.0" style="-fx-background-color: #F5F5F5"
            xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sofoste.sofostemfcalc.services.BasicCalculatorService">
    <VBox alignment="CENTER" layoutX="63.0" layoutY="76.0" prefHeight="222.0" prefWidth="570.0" spacing="10">
        <Label text="Basic Calculator">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="num1TextField" prefWidth="200.0" promptText="Enter first number" />
            <ComboBox fx:id="operationComboBox" prefWidth="150.0" />
            <TextField fx:id="num2TextField" prefWidth="200.0" promptText="Enter second number" />
        </HBox>
        <HBox alignment="CENTER">
            <Button onAction="#calculate" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Calculate" />
            <Label fx:id="resultLabel">
                <HBox.margin>
                    <Insets left="20.0" />
                </HBox.margin>
            </Label>
        </HBox>
        <Button onAction="#backToMainMenu" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-margin-top: 20px" text="Back to Main Menu">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</AnchorPane>
